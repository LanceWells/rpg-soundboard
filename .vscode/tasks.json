{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Tailwind",
      "type": "shell",
      "command": "npm run tailwind",
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "tailwindcss",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "t",
            "endsPattern": "s"
          }
        }
      ]
    }
  ]
}
